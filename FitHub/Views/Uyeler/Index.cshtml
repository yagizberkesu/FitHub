@model IEnumerable<FitHub.Models.Uye>
@{
    ViewData["Title"] = "Üyeler";
}

<h1 class="mb-4">Üyeler</h1>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Doðum Tarihi</th>
            <th>Cinsiyet</th>
            <th>Rol</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@item.Id</td>
        <td>@item.Ad</td>
        <td>@item.Soyad</td>
        <td>@item.Email</td>
        <td>@item.Telefon</td>
        <td>@item.DogumTarihi.ToShortDateString()</td>
        <td>@item.Cinsiyet</td>
        <td>@item.Rol</td>
        <td>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
        </td>
    </tr>
}
    </tbody>
</table>
