@model FitHub.Models.Hizmet
@{
    ViewData["Title"] = "Hizmet Detayı";
}

<h1 class="mb-4">Hizmet Detayı</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Ad</dt>
            <dd class="col-sm-9">@Model.Ad</dd>

            <dt class="col-sm-3">Salon</dt>
            <dd class="col-sm-9">@Model.Salon?.Ad</dd>

            <dt class="col-sm-3">Süre</dt>
            <dd class="col-sm-9">@Model.SureDakika dk</dd>

            <dt class="col-sm-3">Ücret</dt>
            <dd class="col-sm-9">@Model.Ucret ₺</dd>
        </dl>

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
    </div>
</div>
