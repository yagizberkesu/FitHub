@model FitHub.Models.Hizmet
@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<style>
    .form-control, .form-select {
        background-color: #2c2c2c;
        border: 1px solid #444;
        color: #fff;
    }
    .form-control:focus, .form-select:focus {
        background-color: #333;
        color: #fff;
        border-color: #ffc107;
        box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
    }
    .input-group-text {
        background-color: #222;
        border-color: #444;
        color: #aaa;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card bg-card border-0 shadow-lg">
                <div class="card-header bg-transparent border-bottom border-secondary py-3">
                    <h3 class="fw-bold text-white mb-0">
                        <i class="fas fa-folder-plus text-warning me-2"></i>Yeni Hizmet Oluştur
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                        <div class="mb-4">
                            <label asp-for="Ad" class="form-label text-muted small">Hizmet Adı</label>
                            <input asp-for="Ad" class="form-control" placeholder="Örn: Reformer Pilates" />
                            <span asp-validation-for="Ad" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="SalonId" class="form-label text-muted small">Bağlı Olduğu Salon</label>
                            <select asp-for="SalonId" class="form-select" asp-items="ViewBag.SalonId"></select>
                            <span asp-validation-for="SalonId" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="SureDakika" class="form-label text-muted small">Süre (Dakika)</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-hourglass-half"></i></span>
                                    <input asp-for="SureDakika" type="number" step="30" min="30" class="form-control" placeholder="30, 60..." />
                                </div>
                                <span asp-validation-for="SureDakika" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Ucret" class="form-label text-muted small">Ücret (₺)</label>
                                <div class="input-group">
                                    <span class="input-group-text">₺</span>
                                    <input asp-for="Ucret" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Ucret" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top border-secondary">
                            <a asp-action="Index" class="btn btn-outline-light px-4">Geri Dön</a>
                            <button type="submit" class="btn btn-warning px-5 fw-bold shadow">KAYDET</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
 <partial name="_ValidationScriptsPartial" />
 }