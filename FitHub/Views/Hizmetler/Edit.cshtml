@model FitHub.Models.Hizmet
@{
    ViewData["Title"] = "Hizmet Düzenle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card bg-card border-0 shadow-lg">
                <div class="card-header bg-transparent border-bottom border-secondary py-3">
                    <h3 class="fw-bold text-white mb-0"><i class="fas fa-edit text-warning me-2"></i>Hizmeti Düzenle</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-4">
                            <label asp-for="Ad" class="form-label text-muted small">Hizmet Adı</label>
                            <input asp-for="Ad" class="form-control" />
                            <span asp-validation-for="Ad" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="SalonId" class="form-label text-muted small">Bağlı Olduğu Salon</label>
                            <select asp-for="SalonId" class="form-select" asp-items="ViewBag.SalonId"></select>
                            <span asp-validation-for="SalonId" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="SureDakika" class="form-label text-muted small">Süre (Dakika)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-dark border-secondary text-white"><i class="fas fa-hourglass-half"></i></span>
                                    <input asp-for="SureDakika" type="number" step="30" min="30" class="form-control" />
                                </div>
                                <span asp-validation-for="SureDakika" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Ucret" class="form-label text-muted small">Ücret (₺)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-dark border-secondary text-white">₺</span>
                                    <input asp-for="Ucret" type="number" step="0.01" min="0" class="form-control" />
                                </div>
                                <span asp-validation-for="Ucret" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top border-secondary">
                            <a asp-action="Index" class="btn btn-outline-light px-4">Geri Dön</a>
                            <button type="submit" class="btn btn-accent px-5 fw-bold shadow">GÜNCELLE</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
 <partial name="_ValidationScriptsPartial" />
 }