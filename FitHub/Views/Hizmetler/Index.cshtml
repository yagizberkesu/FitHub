@using Microsoft.AspNetCore.Http
@model IEnumerable<FitHub.Models.Hizmet>
@{
    ViewData["Title"] = "Hizmetlerimiz";
    // Admin yetkisi kontrolü
    var userRole = Context.Session.GetString("UserRole");
    bool isAdmin = string.Equals(userRole, "Admin", StringComparison.OrdinalIgnoreCase);
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-white mb-0">Hizmet Kataloğu</h2>
            <p class="text-muted small">Salonlarımızda sunulan profesyonel dersler ve ücretleri.</p>
        </div>

        @if (isAdmin)
        {
                <a asp-action="Create" class="btn btn-accent shadow">
                    <i class="fas fa-folder-plus me-2"></i>Yeni Hizmet
                </a>
        }
    </div>

    @if (!Model.Any())
    {
            <div class="text-center py-5">
                <i class="fas fa-clipboard-list fa-4x text-muted mb-3 opacity-25"></i>
                <h4 class="text-white">Henüz hizmet listesi oluşturulmadı.</h4>
            </div>
    }
    else
    {
            <div class="card bg-card border-0 shadow-lg overflow-hidden">
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0 align-middle">
                        <thead>
                            <tr class="text-secondary text-uppercase small" style="background-color: #1a1a1a;">
                                <th class="py-3 ps-4">Hizmet Adı</th>
                                <th>Salon</th>
                                <th>Süre</th>
                                <th>Ücret</th>
                                <th class="text-end pe-4">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var h in Model)
                        {
                                    <tr>
                                        <td class="ps-4 fw-bold text-white">@h.Ad</td>
                                        <td class="text-muted">@(h.Salon?.Ad ?? "-")</td>
                                        <td>
                                            <span class="badge bg-dark border border-secondary text-info">
                                                <i class="fas fa-hourglass-half me-1"></i>@h.SureDakika dk
                                            </span>
                                        </td>
                                        <td>
                                            <span class="fw-bold text-success fs-5">@h.Ucret.ToString("N0") ₺</span>
                                        </td>
                                        <td class="text-end pe-4">
                                            <div class="btn-group">
                                                <a asp-action="Details" asp-route-id="@h.Id" class="btn btn-sm btn-outline-info" title="İncele">
                                                    <i class="fas fa-eye"></i>
                                                </a>

                                        @if (isAdmin)
                                        {
                                                        <a asp-action="Edit" asp-route-id="@h.Id" class="btn btn-sm btn-outline-warning"><i class="fas fa-edit"></i></a>
                                                        <a asp-action="Delete" asp-route-id="@h.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
                                        }
                                            </div>
                                        </td>
                                    </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
    }
</div>