@model IEnumerable<FitHub.Models.Hizmet>
@{
    ViewData["Title"] = "Hizmetler";
}

<h1 class="mb-4">Hizmetler</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Yeni Hizmet</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Ad</th>
            <th>Salon</th>
            <th>Süre</th>
            <th>Ücret</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var h in Model)
        {
            <tr>
                <td>@h.Ad</td>
                <td>@h.Salon?.Ad</td>
                <td>@h.SureDakika dk</td>
                <td>@h.Ucret ₺</td>
                <td>
                    <a asp-action="Details" asp-route-id="@h.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@h.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@h.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
