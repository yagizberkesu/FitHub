@model FitHub.Models.Hizmet
@{
    ViewData["Title"] = "Sil";
}

<div class="container py-5 d-flex justify-content-center">
    <div class="card bg-card border-danger shadow-lg text-center" style="max-width: 500px;">
        <div class="card-body p-5">
            <div class="mb-4">
                <i class="fas fa-exclamation-triangle fa-4x text-danger mb-3"></i>
                <h3 class="fw-bold text-white">Bu Kaydı Silmek İstiyor musunuz?</h3>
                <p class="text-muted">"@Model.Ad" silinecek. Bu işlem geri alınamaz.</p>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger btn-lg fw-bold">Evet, Sil</button>
                    <a asp-action="Index" class="btn btn-outline-light">İptal, Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>