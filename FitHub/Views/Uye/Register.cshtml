@model FitHub.Models.Uye

@{
    ViewData["Title"] = "Kayıt Ol";
}

<style>
    .register-container {
        min-height: 85vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px 0;
    }
    .form-control, .form-select {
        background-color: #2c2c2c;
        border: 1px solid #444;
        color: #fff;
    }
    .form-control:focus, .form-select:focus {
        background-color: #333;
        color: #fff;
        border-color: var(--primary-color);
        box-shadow: none;
    }
</style>

<div class="register-container">
    <div class="card bg-card shadow-lg border-0" style="width: 100%; max-width: 700px;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <h3 class="fw-bold text-white">Aramıza Katıl</h3>
                <p class="text-muted">FitHub ile değişime bugün başla.</p>
            </div>

            <form asp-action="Register" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Ad" class="form-label text-muted small">Ad</label>
                        <input asp-for="Ad" class="form-control" />
                        <span asp-validation-for="Ad" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Soyad" class="form-label text-muted small">Soyad</label>
                        <input asp-for="Soyad" class="form-control" />
                        <span asp-validation-for="Soyad" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Email" class="form-label text-muted small">E-Posta</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="ornek@mail.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Telefon" class="form-label text-muted small">Telefon</label>
                        <input asp-for="Telefon" class="form-control" placeholder="0555 555 55 55" />
                        <span asp-validation-for="Telefon" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DogumTarihi" class="form-label text-muted small">Doğum Tarihi</label>
                        <input asp-for="DogumTarihi" type="date" class="form-control" />
                        <span asp-validation-for="DogumTarihi" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Cinsiyet" class="form-label text-muted small">Cinsiyet</label>
                        <select asp-for="Cinsiyet" class="form-select">
                            <option value="">Seçiniz...</option>
                            <option value="Erkek">Erkek</option>
                            <option value="Kadın">Kadın</option>
                            <option value="Belirtmek İstemiyorum">Belirtmek İstemiyorum</option>
                        </select>
                        <span asp-validation-for="Cinsiyet" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Sifre" class="form-label text-muted small">Şifre</label>
                        <input asp-for="Sifre" type="password" class="form-control" />
                        <span asp-validation-for="Sifre" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-accent py-3 fw-bold">KAYIT OL</button>
                </div>

                <div class="text-center mt-3">
                    <span class="text-muted small">Zaten üye misin?</span>
                    <a asp-controller="Uye" asp-action="Login" class="text-warning fw-bold small text-decoration-none">Giriş Yap</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}