@model FitHub.Models.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<style>
    .login-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .form-control {
        background-color: #2c2c2c;
        border: 1px solid #444;
        color: #fff;
    }
    .form-control:focus {
        background-color: #333;
        color: #fff;
        border-color: var(--primary-color);
        box-shadow: none;
    }
</style>

<div class="login-container">
    <div class="card bg-card shadow-lg border-0" style="width: 100%; max-width: 400px;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <i class="fas fa-dumbbell fa-3x text-warning mb-3"></i>
                <h3 class="fw-bold text-white">Tekrar Hoşgeldin</h3>
                <p class="text-muted small">Hesabına giriş yap ve antrenmana başla.</p>
            </div>

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label text-muted small">E-Posta Adresi</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark border-secondary text-secondary"><i class="fas fa-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="ornek@mail.com" />
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Sifre" class="form-label text-muted small">Şifre</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark border-secondary text-secondary"><i class="fas fa-lock"></i></span>
                        <input asp-for="Sifre" type="password" class="form-control" placeholder="******" />
                    </div>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-accent py-2 fw-bold">GİRİŞ YAP</button>
                </div>

                <div class="text-center">
                    <span class="text-muted small">Hesabın yok mu?</span>
                    <a asp-controller="Uye" asp-action="Register" class="text-warning fw-bold small text-decoration-none">Hemen Kayıt Ol</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}