@model FitHub.Models.Salon
@{
    ViewData["Title"] = "Salon Ekle";
}

<h1 class="mb-4">Salon Ekle</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Ad" class="form-label"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="CalismaBaslangic" class="form-label">Açýlýþ Saati</label>
            <input asp-for="CalismaBaslangic" type="time" class="form-control" />
            <span asp-validation-for="CalismaBaslangic" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="CalismaBitis" class="form-label">Kapanýþ Saati</label>
            <input asp-for="CalismaBitis" type="time" class="form-control" />
            <span asp-validation-for="CalismaBitis" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Kontenjan" class="form-label"></label>
        <input asp-for="Kontenjan" type="number" min="1" class="form-control" />
        <span asp-validation-for="Kontenjan" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Hizmetler" class="form-label"></label>
        <input asp-for="Hizmetler" class="form-control" placeholder="Örn: Pilates, Yoga" />
        <span asp-validation-for="Hizmetler" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
