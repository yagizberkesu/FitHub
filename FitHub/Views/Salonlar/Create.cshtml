@model FitHub.Models.Salon
@{
    ViewData["Title"] = "Yeni Salon Ekle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card bg-card border-0 shadow-lg">
                <div class="card-header bg-transparent border-bottom border-secondary py-3">
                    <h3 class="fw-bold text-white mb-0"><i class="fas fa-building text-warning me-2"></i>Yeni Salon Ekle</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-4">
                            <label asp-for="Ad" class="form-label text-muted small">Salon Adı</label>
                            <input asp-for="Ad" class="form-control" placeholder="Örn: FitHub Merkez Şube" />
                            <span asp-validation-for="Ad" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="CalismaBaslangic" class="form-label text-muted small">Açılış Saati</label>
                                <input asp-for="CalismaBaslangic" type="time" class="form-control" />
                                <span asp-validation-for="CalismaBaslangic" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CalismaBitis" class="form-label text-muted small">Kapanış Saati</label>
                                <input asp-for="CalismaBitis" type="time" class="form-control" />
                                <span asp-validation-for="CalismaBitis" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Kontenjan" class="form-label text-muted small">Anlık Kapasite (Kişi)</label>
                            <input asp-for="Kontenjan" type="number" class="form-control" />
                            <span asp-validation-for="Kontenjan" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Hizmetler" class="form-label text-muted small">Hizmetler (Metin Olarak)</label>
                            <textarea asp-for="Hizmetler" class="form-control" rows="3" placeholder="Fitness, Havuz, Sauna vb."></textarea>
                            <span asp-validation-for="Hizmetler" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top border-secondary">
                            <a asp-action="Index" class="btn btn-outline-light px-4">Geri Dön</a>
                            <button type="submit" class="btn btn-accent px-5 fw-bold shadow">KAYDET</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
 <partial name="_ValidationScriptsPartial" />
 }