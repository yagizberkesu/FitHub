@model IEnumerable<FitHub.Models.Salon>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Salonlar";
    var userRole = Context.Session.GetString("UserRole");
    bool isAdmin = string.Equals(userRole, "Admin", StringComparison.OrdinalIgnoreCase);
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-white mb-0">Salon Yönetimi</h2>
            <p class="text-muted small">Spor salonu þubelerini ve kapasitelerini buradan yönetin.</p>
        </div>

        @if (isAdmin)
        {
                <a asp-action="Create" class="btn btn-warning fw-bold shadow">
                    <i class="fas fa-plus me-2"></i>Yeni Salon Ekle
                </a>
        }
    </div>

    @if (!Model.Any())
    {
            <div class="text-center py-5 border border-secondary rounded bg-card bg-opacity-50">
                <i class="fas fa-building fa-4x text-muted mb-3 opacity-50"></i>
                <h4 class="text-white">Henüz salon kaydý yok.</h4>
            </div>
    }
    else
    {
            <div class="card bg-card border-0 shadow-lg overflow-hidden">
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0 align-middle">
                        <thead>
                            <tr class="text-secondary text-uppercase small" style="background-color: #1a1a1a;">
                                <th class="ps-4 py-3">Salon Adý</th>
                                <th>Çalýþma Saatleri</th>
                                <th>Kontenjan</th>
                                <th class="text-end pe-4">Ýþlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="fw-bold text-white fs-5">
                                                <i class="fas fa-dumbbell text-warning me-2"></i>@item.Ad
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-dark border border-secondary text-light">
                                                <i class="far fa-clock me-1"></i>
                                        @item.CalismaBaslangic.ToString("HH:mm") - @item.CalismaBitis.ToString("HH:mm")
                                            </span>
                                        </td>
                                        <td>
                                            <div class="text-white">
                                                <i class="fas fa-users text-muted me-2"></i>@item.Kontenjan Kiþi
                                            </div>
                                        </td>
                                        <td class="text-end pe-4">
                                            <div class="btn-group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Ýncele">
                                                    <i class="fas fa-info-circle"></i>
                                                </a>

                                        @if (isAdmin)
                                        {
                                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Düzenle">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </a>
                                        }
                                            </div>
                                        </td>
                                    </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
    }
</div>