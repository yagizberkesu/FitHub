@model IEnumerable<FitHub.Models.Salon>
@{
    ViewData["Title"] = "Salonlar";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-white mb-0">Salon Yönetimi</h2>
            <p class="text-muted small">Spor salonu þubelerini ve kapasitelerini buradan yönetin.</p>
        </div>
        <a asp-action="Create" class="btn btn-accent shadow">
            <i class="fas fa-plus me-2"></i>Yeni Salon Ekle
        </a>
    </div>

    @if (!Model.Any())
    {
            <div class="text-center py-5">
                <i class="fas fa-building fa-4x text-muted mb-3 opacity-25"></i>
                <h4 class="text-white">Henüz kayýtlý salon yok.</h4>
                <p class="text-muted">Sistemi kullanmaya baþlamak için bir salon ekleyin.</p>
            </div>
    }
    else
    {
            <div class="card bg-card border-0 shadow-lg overflow-hidden">
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0 align-middle">
                        <thead>
                            <tr class="text-secondary text-uppercase small" style="background-color: #1a1a1a;">
                                <th class="py-3 ps-4">Salon Adý</th>
                                <th>Çalýþma Saatleri</th>
                                <th>Kontenjan</th>
                                <th>Hizmetler</th>
                                <th class="text-end pe-4">Ýþlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var s in Model)
                        {
                                    <tr>
                                        <td class="ps-4 fw-bold text-white">
                                            <i class="fas fa-dumbbell text-warning me-2"></i>@s.Ad
                                        </td>
                                        <td>
                                            <span class="badge bg-dark border border-secondary text-light">
                                                <i class="far fa-clock me-1"></i>@s.CalismaBaslangic.ToString("HH:mm") - @s.CalismaBitis.ToString("HH:mm")
                                            </span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-users text-muted me-2"></i>
                                                <span class="text-white">@s.Kontenjan Kiþi</span>
                                            </div>
                                        </td>
                                        <td class="text-muted small">
                                    @(string.IsNullOrEmpty(s.Hizmetler) ? "-" : s.Hizmetler)
                                        </td>
                                        <td class="text-end pe-4">
                                            <div class="btn-group">
                                                <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-outline-info" title="Detay"><i class="fas fa-info-circle"></i></a>
                                                <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-outline-warning" title="Düzenle"><i class="fas fa-edit"></i></a>
                                                <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-sm btn-outline-danger" title="Sil"><i class="fas fa-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
    }
</div>