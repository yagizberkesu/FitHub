@model FitHub.Models.Salon
@{
    ViewData["Title"] = "Salonu Düzenle";

    // Veritabanýndan gelen saati parçalýyoruz
    var baslangicSaat = Model.CalismaBaslangic.Hour;
    var baslangicDakika = Model.CalismaBaslangic.Minute;

    var bitisSaat = Model.CalismaBitis.Hour;
    var bitisDakika = Model.CalismaBitis.Minute;
}

<style>
    .form-control, .form-select {
        background-color: #2c2c2c;
        border: 1px solid #444;
        color: #fff;
    }
    .form-control:focus, .form-select:focus {
        background-color: #333;
        color: #fff;
        border-color: #ffc107;
        box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
    }
    option { background-color: #222; }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card bg-card border-0 shadow-lg">
                <div class="card-header bg-transparent border-bottom border-secondary py-3">
                    <h3 class="fw-bold text-white mb-0">
                        <i class="fas fa-edit text-warning me-2"></i>Salonu Düzenle
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="mb-4">
                            <label asp-for="Ad" class="form-label text-muted small">Salon Adý</label>
                            <input asp-for="Ad" class="form-control" />
                            <span asp-validation-for="Ad" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label class="form-label text-muted small">Açýlýþ Saati</label>
                                <div class="d-flex gap-2">
                                    <select class="form-select time-part" id="baslangic_saat" data-target="CalismaBaslangic">
                                        @for (int i = 6; i <= 23; i++)
                                        {
                                                <!option value="@i.ToString("00")" @(i == baslangicSaat ? "selected" : "")>@i.ToString("00")</!option>
                                        }
                                    </select>
                                    <span class="text-white align-self-center">:</span>

                                    <select class="form-select time-part" id="baslangic_dakika" data-target="CalismaBaslangic">
                                        <!option value="00" @(baslangicDakika == 0 ? "selected" : "")>00</!option>
                                        <!option value="30" @(baslangicDakika == 30 ? "selected" : "")>30</!option>
                                    </select>
                                </div>
                                <input type="hidden" asp-for="CalismaBaslangic" id="CalismaBaslangic" />
                                <span asp-validation-for="CalismaBaslangic" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label text-muted small">Kapanýþ Saati</label>
                                <div class="d-flex gap-2">
                                    <select class="form-select time-part" id="bitis_saat" data-target="CalismaBitis">
                                        @for (int i = 6; i <= 23; i++)
                                        {
                                                <!option value="@i.ToString("00")" @(i == bitisSaat ? "selected" : "")>@i.ToString("00")</!option>
                                        }
                                    </select>
                                    <span class="text-white align-self-center">:</span>

                                    <select class="form-select time-part" id="bitis_dakika" data-target="CalismaBitis">
                                        <!option value="00" @(bitisDakika == 0 ? "selected" : "")>00</!option>
                                        <!option value="30" @(bitisDakika == 30 ? "selected" : "")>30</!option>
                                    </select>
                                </div>
                                <input type="hidden" asp-for="CalismaBitis" id="CalismaBitis" />
                                <span asp-validation-for="CalismaBitis" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Kontenjan" class="form-label text-muted small">Anlýk Kapasite (Kiþi)</label>
                            <input asp-for="Kontenjan" type="number" class="form-control" />
                            <span asp-validation-for="Kontenjan" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top border-secondary">
                            <a asp-action="Index" class="btn btn-outline-light px-4">Listeye Dön</a>
                            <button type="submit" class="btn btn-warning px-5 fw-bold shadow">GÜNCELLE</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts { 
        <partial name="_ValidationScriptsPartial" /> 
        <script>
            function updateTimeInputs() {
                $('.time-part').each(function() {
                    var targetId = $(this).data('target');
                    var prefix = targetId === 'CalismaBaslangic' ? 'baslangic' : 'bitis';
                    var saat = $('#' + prefix + '_saat').val();
                    var dakika = $('#' + prefix + '_dakika').val();
                    $('#' + targetId).val(saat + ':' + dakika);
                });
            }

            $('.time-part').change(updateTimeInputs);
            updateTimeInputs(); // Sayfa açýlýnca inputlarý doldur
        </script>
}