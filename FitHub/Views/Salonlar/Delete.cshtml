@model FitHub.Models.Salon
@{
    ViewData["Title"] = "Salon Sil";
}

<h1 class="mb-4">Salon Sil</h1>

<div class="alert alert-warning">Bu salonu silmek istediðinize emin misiniz?</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Ad</dt>
            <dd class="col-sm-9">@Model.Ad</dd>

            <dt class="col-sm-3">Çalýþma Saatleri</dt>
            <dd class="col-sm-9">@Model.CalismaBaslangic.ToString("HH:mm") - @Model.CalismaBitis.ToString("HH:mm")</dd>

            <dt class="col-sm-3">Kontenjan</dt>
            <dd class="col-sm-9">@Model.Kontenjan</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Ýptal</a>
</form>
