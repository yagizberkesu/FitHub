@model FitHub.Models.Salon
@{
    ViewData["Title"] = "Salon Detayý";
}

<h1 class="mb-4">Salon Detayý</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Ad</dt>
            <dd class="col-sm-9">@Model.Ad</dd>

            <dt class="col-sm-3">Çalýþma Saatleri</dt>
            <dd class="col-sm-9">@Model.CalismaBaslangic.ToString("HH:mm") - @Model.CalismaBitis.ToString("HH:mm")</dd>

            <dt class="col-sm-3">Kontenjan</dt>
            <dd class="col-sm-9">@Model.Kontenjan</dd>

            <dt class="col-sm-3">Hizmetler</dt>
            <dd class="col-sm-9">@Model.Hizmetler</dd>
        </dl>

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
    </div>
</div>
