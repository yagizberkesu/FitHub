@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-5 border-bottom border-secondary pb-3">
        <i class="fas fa-user-shield fa-3x text-warning me-3"></i>
        <div>
            <h1 class="h2 fw-bold text-white mb-0">Yönetim Paneli</h1>
            <p class="text-muted mb-0">Sistem ayarlarını ve içerikleri buradan yönetebilirsiniz.</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="card bg-card border-0 shadow h-100 hover-card">
                <div class="card-body text-center p-4">
                    <div class="bg-dark rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="fas fa-building fa-2x text-warning"></i>
                    </div>
                    <h5 class="fw-bold text-white">Salon Yönetimi</h5>
                    <p class="text-muted small">Şubeleri ekle, düzenle veya çalışma saatlerini güncelle.</p>
                    <a href="/Salonlar/Index" class="btn btn-outline-light btn-sm stretched-link mt-2">Yönet</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card bg-card border-0 shadow h-100 hover-card">
                <div class="card-body text-center p-4">
                    <div class="bg-dark rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="fas fa-user-ninja fa-2x text-info"></i>
                    </div>
                    <h5 class="fw-bold text-white">Eğitmenler</h5>
                    <p class="text-muted small">Antrenör profillerini ve uzmanlık alanlarını düzenle.</p>
                    <a href="/Egitmenler/Index" class="btn btn-outline-light btn-sm stretched-link mt-2">Yönet</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card bg-card border-0 shadow h-100 hover-card">
                <div class="card-body text-center p-4">
                    <div class="bg-dark rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="fas fa-clipboard-list fa-2x text-success"></i>
                    </div>
                    <h5 class="fw-bold text-white">Hizmetler</h5>
                    <p class="text-muted small">Ders türlerini, sürelerini ve fiyatlandırmayı ayarla.</p>
                    <a href="/Hizmetler/Index" class="btn btn-outline-light btn-sm stretched-link mt-2">Yönet</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card bg-card border-0 shadow h-100 hover-card">
                <div class="card-body text-center p-4">
                    <div class="bg-dark rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="fas fa-calendar-check fa-2x text-danger"></i>
                    </div>
                    <h5 class="fw-bold text-white">Tüm Randevular</h5>
                    <p class="text-muted small">Üyelerin aldığı randevuları onayla, iptal et veya incele.</p>
                    <a href="/Randevular/Index" class="btn btn-outline-light btn-sm stretched-link mt-2">Yönet</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="card bg-dark border border-secondary shadow-lg">
                <div class="card-body p-4 d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="fw-bold text-white mb-1">Sistem Durumu</h5>
                        <p class="text-muted mb-0">Veritabanı bağlantısı ve API servisleri aktif durumda.</p>
                    </div>
                    <div class="text-success fw-bold">
                        <i class="fas fa-signal me-2"></i>Online
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.3s ease, background-color 0.3s;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        background-color: #252525;
    }
</style>