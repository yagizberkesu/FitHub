@model FitHub.Models.Randevu
@{
    ViewData["Title"] = "Randevu Detayý";
}

<div class="container py-5 d-flex justify-content-center">
    <div class="card bg-card border-0 shadow-lg w-100" style="max-width: 600px;">
        <div class="card-header bg-transparent border-bottom border-secondary text-center py-4">
            <div class="bg-dark border border-warning rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                <i class="fas fa-calendar-check fa-3x text-warning"></i>
            </div>
            <h4 class="fw-bold text-white mb-0">Randevu Özeti</h4>
            <p class="text-muted small mb-0">Referans Kodu: #@Model.Id</p>
        </div>

        <div class="card-body p-4">
            <div class="text-center mb-4">
                @if (Model.Durum == "Ýptal")
                {
                        <span class="badge bg-danger fs-6 px-4 py-2 rounded-pill">ÝPTAL EDÝLDÝ</span>
                }
                else if (Model.Tarih < DateOnly.FromDateTime(DateTime.Now))
                {
                        <span class="badge bg-secondary fs-6 px-4 py-2 rounded-pill">GEÇMÝÞ RANDEVU</span>
                }
                else
                {
                        <span class="badge bg-success fs-6 px-4 py-2 rounded-pill">AKTÝF RANDEVU</span>
                }
            </div>

            <div class="row g-4">
                <div class="col-6 border-end border-secondary">
                    <div class="mb-3">
                        <label class="text-secondary small text-uppercase fw-bold">Hizmet</label>
                        <div class="text-white fs-5 fw-bold">@Model.Hizmet</div>
                    </div>
                    <div class="mb-3">
                        <label class="text-secondary small text-uppercase fw-bold">Tarih</label>
                        <div class="text-white">@Model.Tarih.ToString("dd MMMM yyyy")</div>
                        <div class="text-warning fw-bold">@Model.Baslangic.ToString("HH:mm") - @Model.Bitis.ToString("HH:mm")</div>
                    </div>
                </div>

                <div class="col-6 ps-4">
                    <div class="mb-3">
                        <label class="text-secondary small text-uppercase fw-bold">Salon</label>
                        <div class="text-white">@(Model.Salon?.Ad ?? "-")</div>
                    </div>
                    <div class="mb-3">
                        <label class="text-secondary small text-uppercase fw-bold">Eðitmen</label>
                        <div class="text-white">@(Model.Egitmen?.Ad ?? "-")</div>
                    </div>
                    <div class="mb-3">
                        <label class="text-secondary small text-uppercase fw-bold">Ücret</label>
                        <div class="text-success fs-5 fw-bold">@Model.Ucret.ToString("C2")</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-transparent border-top border-secondary p-4 d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-light px-4">
                <i class="fas fa-arrow-left me-2"></i>Geri
            </a>

            @if (Model.Durum != "Ýptal" && Model.Tarih >= DateOnly.FromDateTime(DateTime.Now))
            {
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger px-4">
                        <i class="fas fa-trash-alt me-2"></i>Ýptal Et
                    </a>
            }
        </div>
    </div>
</div>