@model IEnumerable<FitHub.Models.Randevu>
@{
    ViewData["Title"] = "Randevular";
    // Yönetici mi kontrolü (Layout'taki mantýkla ayný)
    var userRole = Context.Session.GetString("UserRole");
    bool isAdmin = string.Equals(userRole, "Admin", StringComparison.OrdinalIgnoreCase);
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-white mb-0">
                <i class="fas fa-calendar-alt text-warning me-2"></i>Randevular
            </h2>
            <p class="text-muted small">
                @(isAdmin ? "Sistemdeki tüm randevularýn listesi." : "Planlanmýþ antrenmanlarýn.")
            </p>
        </div>
        <a asp-action="Create" class="btn btn-warning fw-bold shadow">
            <i class="fas fa-plus me-2"></i>Yeni Randevu
        </a>
    </div>

    @if (!Model.Any())
    {
            <div class="text-center py-5 border border-secondary rounded bg-card bg-opacity-50">
                <i class="far fa-calendar-times fa-4x text-muted mb-3 opacity-50"></i>
                <h4 class="text-white">Henüz randevu kaydý yok.</h4>
                <p class="text-muted">Hemen bir antrenman planlayýn!</p>
                <a asp-action="Create" class="btn btn-outline-warning mt-2">Randevu Al</a>
            </div>
    }
    else
    {
            <div class="card bg-card border-0 shadow-lg overflow-hidden">
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0 align-middle">
                        <thead>
                            <tr class="text-secondary text-uppercase small" style="background-color: #1a1a1a;">
                                <th class="ps-4 py-3">Tarih / Saat</th>
                                <th>Hizmet</th>
                                <th>Salon & Eðitmen</th>
                                <th>Ücret</th>
                                <th>Durum</th>
                                <th class="text-end pe-4">Ýþlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="fw-bold text-white">@item.Tarih.ToString("dd.MM.yyyy")</div>
                                            <div class="small text-muted">
                                                <i class="far fa-clock me-1"></i>@item.Baslangic.ToString("HH:mm") - @item.Bitis.ToString("HH:mm")
                                            </div>
                                        </td>
                                        <td>
                                            <span class="text-info fw-bold">@item.Hizmet</span>
                                        </td>
                                        <td>
                                            <div class="text-white small mb-1"><i class="fas fa-map-marker-alt text-secondary me-1"></i>@(item.Salon?.Ad ?? "-")</div>
                                            <div class="text-muted small"><i class="fas fa-user-ninja text-secondary me-1"></i>@(item.Egitmen?.Ad ?? "-")</div>
                                        </td>
                                        <td>
                                            <span class="text-success fw-bold">@item.Ucret.ToString("C0")</span>
                                        </td>
                                        <td>
                                    @if (item.Durum == "Ýptal")
                                    {
                                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger">Ýptal Edildi</span>
                                    }
                                    else if (item.Tarih < DateOnly.FromDateTime(DateTime.Now))
                                    {
                                                    <span class="badge bg-secondary text-light">Tamamlandý</span>
                                    }
                                    else
                                    {
                                                    <span class="badge bg-warning text-dark">Aktif</span>
                                    }
                                        </td>
                                        <td class="text-end pe-4">
                                            <div class="btn-group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detay">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                        @if (item.Durum != "Ýptal" && item.Tarih >= DateOnly.FromDateTime(DateTime.Now))
                                        {
                                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Ýptal Et">
                                                            <i class="fas fa-times"></i>
                                                        </a>
                                        }
                                            </div>
                                        </td>
                                    </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
    }
</div>