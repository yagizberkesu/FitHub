@model IEnumerable<FitHub.Models.Randevu>
@{
    ViewData["Title"] = "Randevular";
}

<h1 class="mb-4">Randevular</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Yeni Randevu Ekle</a>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Üye</th>
            <th>Eðitmen</th>
            <th>Salon</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Hizmet</th>
            <th>Süre (dk)</th>
            <th>Ücret</th>
            <th>Onaylandý</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@item.Uye?.Ad</td>
        <td>@item.Egitmen?.Ad</td>
        <td>@item.Salon?.Ad</td>
        <td>@item.Tarih.ToShortDateString()</td>
        <td>@item.Saat</td>
        <td>@item.Hizmet</td>
        <td>@item.Sure</td>
        <td>@item.Ucret.ToString("C")</td>
        <td>
            @if (item.Onaylandi)
            {
                <span class="badge bg-success">Onaylandý</span>
            }
            else
            {
                <span class="badge bg-warning text-dark">Bekliyor</span>
            }
        </td>
        <td>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
        </td>
    </tr>
}
    </tbody>
</table>
