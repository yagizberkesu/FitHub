@model IEnumerable<FitHub.Models.Randevu>
@{
    ViewData["Title"] = "Randevular";
    var userRole = Context.Session.GetString("UserRole") ?? "";
    var isAdmin = string.Equals(userRole, "Admin", StringComparison.OrdinalIgnoreCase);
}

<h1 class="mb-4">Randevular</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Randevu Al</a>

@if (!Model.Any())
{
        <div class="alert alert-info text-center mt-4">
            Henüz Randevu bulunmuyor.
        </div>
}
else
{
        <table class="table table-bordered">
            <!-- mevcut tablo -->
        </table>
}


<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Üye</th>
            <th>Eðitmen</th>
            <th>Salon</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Süre (dk)</th>
            <th>Kiþi</th>
            <th>Hizmet</th>
            <th>Ücret</th>
            <th>Durum</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Uye == null ? "" : $"{item.Uye.Ad} {item.Uye.Soyad}")</td>
                <td>@item.Egitmen?.Ad</td>
                <td>@item.Salon?.Ad</td>
                <td>@item.Tarih.ToString("yyyy-MM-dd")</td>
                <td>@item.Baslangic.ToString("HH:mm") - @item.Bitis.ToString("HH:mm")</td>
                <td>@item.Sure</td>
                <td>@item.KisiSayisi</td>
                <td>@item.Hizmet</td>
                <td>@item.Ucret.ToString("C")</td>
                <td>
                    @if (item.Durum == "Onaylandý")
                    {
                            <span class="badge bg-success">Onaylandý</span>
                    }
                    else if (item.Durum == "Ýptal")
                    {
                            <span class="badge bg-danger">Ýptal</span>
                    }
                    else
                    {
                            <span class="badge bg-warning text-dark">Beklemede</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
                    @if (isAdmin && item.Durum == "Beklemede")
                    {
                            <form asp-action="Approve" method="post" asp-route-id="@item.Id" style="display:inline">
                            @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success btn-sm">Onayla</button>
                            </form>
                            <form asp-action="Cancel" method="post" asp-route-id="@item.Id" style="display:inline">
                            @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm">Ýptal</button>
                            </form>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Sil</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
