@model FitHub.Models.Randevu
@{
    ViewData["Title"] = "Randevu Düzenle";

    // Saati ve Dakikayý ayýr
    var saat = Model.Baslangic.Hour;
    var dakika = Model.Baslangic.Minute;
}

<style>
    .form-control, .form-select {
        background-color: #2c2c2c;
        border: 1px solid #444;
        color: #fff;
    }
    .form-control:focus, .form-select:focus {
        background-color: #333;
        color: #fff;
        border-color: #ffc107;
        box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
    }
    option { background-color: #222; }
    .form-control:disabled, .form-control[readonly] {
        background-color: #222;
        opacity: 0.7;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card bg-card border-0 shadow-lg">
                <div class="card-header bg-transparent border-bottom border-secondary py-3">
                    <h3 class="fw-bold text-white mb-0">
                        <i class="fas fa-edit text-warning me-2"></i>Randevu Saatini Deðiþtir
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info bg-dark border-secondary text-light small mb-4">
                        <i class="fas fa-info-circle me-2"></i>Sadece Tarih ve Saat deðiþikliði yapabilirsiniz. Salon veya Eðitmen deðiþimi için randevuyu iptal edip yeniden oluþturmalýsýnýz.
                    </div>

                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="SalonId" />
                        <input type="hidden" asp-for="EgitmenId" />
                        <input type="hidden" asp-for="HizmetId" />
                        <input type="hidden" asp-for="UyeId" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="mb-4">
                            <label class="form-label text-muted small">Hizmet</label>
                            <input type="text" class="form-control" value="@Model.Hizmet" readonly />
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Tarih" class="form-label text-muted small">Tarih</label>
                                <input asp-for="Tarih" type="date" class="form-control" />
                                <span asp-validation-for="Tarih" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label text-muted small">Yeni Baþlangýç Saati</label>
                                <div class="d-flex gap-2">
                                    <select class="form-select time-part" id="saat_secim">
                                        @for (int i = 7; i <= 22; i++)
                                        {
                                                <!option value="@i.ToString("00")" @(i == saat ? "selected" : "")>@i.ToString("00")</!option>
                                        }
                                    </select>
                                    <span class="text-white align-self-center fw-bold">:</span>
                                    <select class="form-select time-part" id="dakika_secim">
                                        <!option value="00" @(dakika == 0 ? "selected" : "")>00</!option>
                                        <!option value="30" @(dakika == 30 ? "selected" : "")>30</!option>
                                    </select>
                                </div>
                                <input type="hidden" asp-for="Baslangic" id="BaslangicInput" />
                                <span asp-validation-for="Baslangic" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top border-secondary">
                            <a asp-action="Index" class="btn btn-outline-light px-4">Geri Dön</a>
                            <button type="submit" class="btn btn-warning px-5 fw-bold shadow">GÜNCELLE</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts { 
        <partial name="_ValidationScriptsPartial" /> 
        <script>
            function updateHiddenInput() {
                var s = $('#saat_secim').val();
                var d = $('#dakika_secim').val();
                // Backend TimeOnly formatý için HH:mm:00 þeklinde göndermek gerekebilir veya HH:mm
                $('#BaslangicInput').val(s + ':' + d);
            }

            $('.time-part').change(updateHiddenInput);

            // Sayfa ilk açýldýðýnda deðeri set et
            updateHiddenInput();
        </script>
}