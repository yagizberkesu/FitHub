@model FitHub.Models.Randevu
@{
    ViewData["Title"] = "Randevu Düzenle";
}

<h1 class="mb-4">Randevu Düzenle</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="Tarih" class="form-label"></label>
            <input asp-for="Tarih" class="form-control" type="date" />
            <span asp-validation-for="Tarih" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Baslangic" class="form-label">Baþlangýç</label>
            <input asp-for="Baslangic" class="form-control" type="time" />
            <span asp-validation-for="Baslangic" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Sure" class="form-label">Süre (dk)</label>
            <input asp-for="Sure" class="form-control" type="number" min="30" step="30" />
            <span asp-validation-for="Sure" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="KisiSayisi" class="form-label">Kiþi Sayýsý</label>
        <input asp-for="KisiSayisi" class="form-control" type="number" min="1" />
        <span asp-validation-for="KisiSayisi" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Hizmet" class="form-label"></label>
            <input asp-for="Hizmet" class="form-control" />
            <span asp-validation-for="Hizmet" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Ucret" class="form-label"></label>
            <input asp-for="Ucret" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Ucret" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Durum" class="form-label"></label>
        <select asp-for="Durum" class="form-select">
            <option value="Beklemede">Beklemede</option>
            <option value="Onaylandý">Onaylandý</option>
            <option value="Ýptal">Ýptal</option>
        </select>
        <span asp-validation-for="Durum" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
