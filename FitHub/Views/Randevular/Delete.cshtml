@model FitHub.Models.Randevu
@{
    ViewData["Title"] = "Randevu Ýptal/Sil";
}

<div class="container py-5 d-flex justify-content-center">
    <div class="card bg-card border-danger shadow-lg text-center" style="max-width: 500px;">
        <div class="card-body p-5">
            <div class="mb-4">
                <i class="fas fa-calendar-times fa-4x text-danger mb-3"></i>
                <h3 class="fw-bold text-white">Randevuyu Ýptal Et?</h3>

                <p class="text-muted mb-1">
                    <span class="text-white fw-bold">@Model.Tarih.ToString("dd.MM.yyyy")</span> tarihindeki
                </p>
                <p class="text-warning fs-5 mb-0">
                    "@Model.Hizmet"
                </p>
                <p class="text-muted small mt-2">randevusu silinecek. Bu iþlem geri alýnamaz.</p>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger btn-lg fw-bold">
                        <i class="fas fa-trash-alt me-2"></i>Evet, Ýptal Et
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light">Vazgeç, Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>