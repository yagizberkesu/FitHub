@model FitHub.Models.Randevu
@{
    ViewData["Title"] = "Randevuyu Ýptal Et";
}

<div class="container py-5 d-flex justify-content-center">
    <div class="card bg-card border-danger shadow-lg text-center w-100" style="max-width: 500px;">
        <div class="card-body p-5">
            <div class="mb-4">
                <div class="d-inline-flex align-items-center justify-content-center bg-danger bg-opacity-10 rounded-circle mb-3" style="width: 80px; height: 80px;">
                    <i class="fas fa-exclamation-triangle fa-3x text-danger"></i>
                </div>
                <h3 class="fw-bold text-white">Randevuyu Ýptal Et?</h3>
                <p class="text-muted mt-3">
                    Aþaðýdaki randevu kaydý iptal edilecektir. Bu iþlem geri alýnamaz.
                </p>

                <div class="bg-dark rounded p-3 border border-secondary mt-4">
                    <div class="text-white fw-bold fs-5">@Model.Hizmet</div>
                    <div class="text-warning my-1">@Model.Tarih.ToString("dd MMMM yyyy")</div>
                    <div class="text-light small">Saat: @Model.Baslangic.ToString("HH:mm")</div>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger btn-lg fw-bold shadow">
                        <i class="fas fa-ban me-2"></i>Evet, Ýptal Et
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light">Vazgeç</a>
                </div>
            </form>
        </div>
    </div>
</div>