@model FitHub.Models.Randevu
@{
    ViewData["Title"] = "Randevu Sil";
}

<h1 class="mb-4">Randevu Sil</h1>

<div class="alert alert-warning">
    Bu randevuyu silmek istediðinize emin misiniz?
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Üye</dt>
            <dd class="col-sm-9">@(Model.Uye == null ? "" : $"{Model.Uye.Ad} {Model.Uye.Soyad}")</dd>

            <dt class="col-sm-3">Salon</dt>
            <dd class="col-sm-9">@Model.Salon?.Ad</dd>

            <dt class="col-sm-3">Eðitmen</dt>
            <dd class="col-sm-9">@Model.Egitmen?.Ad</dd>

            <dt class="col-sm-3">Tarih / Saat</dt>
            <dd class="col-sm-9">@Model.Tarih.ToString("yyyy-MM-dd") @Model.Baslangic.ToString("HH:mm")-@Model.Bitis.ToString("HH:mm")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Ýptal</a>
</form>
