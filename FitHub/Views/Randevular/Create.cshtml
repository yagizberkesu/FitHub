@model FitHub.Models.RandevuCreateViewModel
@{
    ViewData["Title"] = "Randevu Al";
}

<style>
    /* Koyu Tema Uyumlu Form Elemanları */
    .form-control, .form-select {
        background-color: #2c2c2c;
        border: 1px solid #444;
        color: #fff;
    }
    .form-control:focus, .form-select:focus {
        background-color: #333;
        color: #fff;
        border-color: #ffc107;
        box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
    }
    /* Select içindeki option'ların arka planı */
    option { background-color: #222; color: #fff; }

    /* Input Group İkonları */
    .input-group-text {
        background-color: #222;
        border-color: #444;
        color: #aaa;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card bg-card border-0 shadow-lg">
                <div class="card-header bg-transparent border-bottom border-secondary py-3">
                    <h3 class="fw-bold text-white mb-0">
                        <i class="fas fa-calendar-check text-warning me-2"></i>Yeni Randevu Oluştur
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <h6 class="text-warning text-uppercase small fw-bold mb-3">1. Salon ve Eğitmen Seçimi</h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label class="form-label text-muted small">Salon</label>
                                <select asp-for="SalonId" class="form-select form-select-lg" asp-items="Model.Salonlar" id="salonSelect">
                                    <option value="">Salon Seçiniz...</option>
                                </select>
                                <span asp-validation-for="SalonId" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-muted small">Eğitmen</label>
                                <select asp-for="EgitmenId" class="form-select form-select-lg" asp-items="Model.Egitmenler" id="egitmenSelect" disabled>
                                    <option value="">Önce Salon Seçiniz</option>
                                </select>
                                <span asp-validation-for="EgitmenId" class="text-danger small"></span>
                            </div>
                        </div>

                        <h6 class="text-warning text-uppercase small fw-bold mb-3">2. Hizmet ve Zamanlama</h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <label class="form-label text-muted small">Tarih</label>
                                <input asp-for="Tarih" class="form-control" type="date" id="tarihInput" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="Tarih" class="text-danger small"></span>
                            </div>
                            <div class="col-md-8">
                                <label class="form-label text-muted small">Hizmet</label>
                                <select asp-for="HizmetId" class="form-select" asp-items="Model.Hizmetler" id="hizmetSelect" disabled>
                                    <option value="">Önce Eğitmen Seçiniz</option>
                                </select>
                                <div class="form-text text-info mt-1" id="hizmetInfo"></div>
                                <span asp-validation-for="HizmetId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-8">
                                <label class="form-label text-muted small">Uygun Saatler</label>
                                <select asp-for="BaslangicStr" class="form-select" id="saatSelect" disabled>
                                    <option value="">Seçimlerinizi yapınız...</option>
                                </select>
                                <span asp-validation-for="BaslangicStr" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label text-muted small">Kişi Sayısı</label>
                                <input asp-for="KisiSayisi" class="form-control" type="number" min="1" max="10" />
                                <span asp-validation-for="KisiSayisi" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top border-secondary">
                            <a asp-action="Index" class="btn btn-outline-light px-4">İptal</a>
                            <button type="submit" class="btn btn-warning px-5 fw-bold shadow">
                                <i class="fas fa-check me-2"></i>RANDEVUYU ONAYLA
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            $(document).ready(function () {
                // 1. Salon değişince Eğitmenleri Getir
                $('#salonSelect').change(function () {
                    var salonId = $(this).val();
                    var $egitmenSelect = $('#egitmenSelect');

                    $egitmenSelect.empty().append('<option value="">Yükleniyor...</option>').prop('disabled', true);
                    $('#hizmetSelect').empty().append('<option value="">Önce Eğitmen Seçiniz</option>').prop('disabled', true);
                    $('#saatSelect').empty().prop('disabled', true);

                    if (salonId) {
                        $.getJSON('/Randevular/GetEgitmenler?salonId=' + salonId, function (data) {
                            $egitmenSelect.empty().append('<option value="">Eğitmen Seçiniz...</option>');
                            $.each(data, function (i, item) {
                                $egitmenSelect.append($('<option>').val(item.id).text(item.ad));
                            });
                            $egitmenSelect.prop('disabled', false);
                        });
                    } else {
                        $egitmenSelect.empty().append('<option value="">Önce Salon Seçiniz</option>');
                    }
                });

                // 2. Eğitmen değişince Hizmetleri Getir
                $('#egitmenSelect').change(function () {
                    var egitmenId = $(this).val();
                    var $hizmetSelect = $('#hizmetSelect');

                    $hizmetSelect.empty().append('<option value="">Yükleniyor...</option>').prop('disabled', true);

                    if (egitmenId) {
                        $.getJSON('/Randevular/GetHizmetler?egitmenId=' + egitmenId, function (data) {
                            $hizmetSelect.empty().append('<option value="">Hizmet Seçiniz...</option>');
                            $.each(data, function (i, item) {
                                $hizmetSelect.append(
                                    $('<option>').val(item.id).text(item.ad).data('sure', item.sure).data('ucret', item.ucret)
                                );
                            });
                            $hizmetSelect.prop('disabled', false);
                        });
                    }
                });

                // 3. Hizmet veya Tarih değişince Saatleri Getir
                $('#hizmetSelect, #tarihInput').change(function () {
                    updateHizmetInfo();
                    loadSlots();
                });

                function updateHizmetInfo() {
                    var $selectedOption = $('#hizmetSelect option:selected');
                    var sure = $selectedOption.data('sure');
                    var ucret = $selectedOption.data('ucret');

                    if (sure && ucret) {
                        $('#hizmetInfo').html('<i class="fas fa-clock me-1"></i>Süre: <b>' + sure + ' dk</b> | <i class="fas fa-tag me-1"></i>Ücret: <b>' + ucret + ' ₺</b>');
                    } else {
                        $('#hizmetInfo').empty();
                    }
                }

                function loadSlots() {
                    var salonId = $('#salonSelect').val();
                    var egitmenId = $('#egitmenSelect').val();
                    var hizmetId = $('#hizmetSelect').val();
                    var tarih = $('#tarihInput').val();
                    var $saatSelect = $('#saatSelect');

                    if (salonId && egitmenId && hizmetId && tarih) {
                        $saatSelect.empty().append('<option>Saatler kontrol ediliyor...</option>').prop('disabled', true);

                        var url = `/Randevular/GetSlots?salonId=${salonId}&egitmenId=${egitmenId}&tarih=${tarih}&hizmetId=${hizmetId}`;

                        $.getJSON(url, function (data) {
                            $saatSelect.empty();
                            if (data.length === 0) {
                                $saatSelect.append('<option value="">Uygun saat yok</option>');
                            } else {
                                $.each(data, function (i, time) {
                                    $saatSelect.append($('<option>').val(time).text(time));
                                });
                                $saatSelect.prop('disabled', false);
                            }
                        });
                    }
                }
            });
        </script>
}