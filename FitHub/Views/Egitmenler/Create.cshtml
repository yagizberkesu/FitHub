@model FitHub.Models.EgitmenFormViewModel
@{
    ViewData["Title"] = "Yeni Eðitmen";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card bg-card border-0 shadow-lg">
                <div class="card-header bg-transparent border-bottom border-secondary py-3">
                    <h3 class="fw-bold text-white mb-0"><i class="fas fa-user-ninja text-warning me-2"></i>Yeni Eðitmen Tanýmla</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Ad" class="form-label text-muted small">Ad Soyad</label>
                                <input asp-for="Ad" class="form-control" placeholder="Örn: Ahmet Yýlmaz" />
                                <span asp-validation-for="Ad" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SalonId" class="form-label text-muted small">Çalýþtýðý Salon</label>
                                <select asp-for="SalonId" class="form-select" asp-items="Model.Salonlar"></select>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UzmanlikAlanlari" class="form-label text-muted small">Uzmanlýk Alanlarý</label>
                            <input asp-for="UzmanlikAlanlari" class="form-control" placeholder="Örn: Pilates, Crossfit, Boks" />
                            <span asp-validation-for="UzmanlikAlanlari" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="MusaitlikBaslangic" class="form-label text-muted small">Mesai Baþlangýç</label>
                                <input asp-for="MusaitlikBaslangic" type="time" class="form-control" />
                                <span asp-validation-for="MusaitlikBaslangic" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MusaitlikBitis" class="form-label text-muted small">Mesai Bitiþ</label>
                                <input asp-for="MusaitlikBitis" type="time" class="form-control" />
                                <span asp-validation-for="MusaitlikBitis" class="text-danger small"></span>
                            </div>
                        </div>

                        @if (Model.Hizmetler != null && Model.Hizmetler.Any())
                        {
                                <div class="mb-4">
                                    <label class="form-label text-muted small d-block">Verebileceði Hizmetler</label>
                                    <div class="card bg-dark border border-secondary p-3" style="max-height: 200px; overflow-y: auto;">
                                    @foreach (var h in Model.Hizmetler)
                                    {
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="SelectedHizmetIds" value="@h.Value" id="hizmet_@h.Value" 
                                            @(h.Selected ? "checked" : "")>
                                                    <label class="form-check-label text-white" for="hizmet_@h.Value">
                                                @h.Text
                                                    </label>
                                                </div>
                                    }
                                    </div>
                                </div>
                        }
                        else
                        {
                                <div class="alert alert-warning small">
                                    <i class="fas fa-exclamation-triangle me-2"></i>Önce sisteme hizmet eklemelisiniz.
                                </div>
                        }

                        <div class="d-flex justify-content-between pt-3 border-top border-secondary">
                            <a asp-action="Index" class="btn btn-outline-light px-4">Geri Dön</a>
                            <button type="submit" class="btn btn-accent px-5 fw-bold shadow">KAYDET</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
 <partial name="_ValidationScriptsPartial" />
 }