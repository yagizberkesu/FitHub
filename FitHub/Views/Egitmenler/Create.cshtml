@model FitHub.Models.Egitmen
@{
    ViewData["Title"] = "Eðitmen Ekle";
}

<h1 class="mb-4">Eðitmen Ekle</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Ad" class="form-label"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UzmanlikAlanlari" class="form-label">Uzmanlýk Alanlarý</label>
        <input asp-for="UzmanlikAlanlari" class="form-control" placeholder="Örn: Yoga, Pilates" />
        <span asp-validation-for="UzmanlikAlanlari" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Hizmetler" class="form-label">Hizmetler</label>
        <input asp-for="Hizmetler" class="form-control" placeholder="Örn: PT, Grup Dersi" />
        <span asp-validation-for="Hizmetler" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="MusaitlikBaslangic" class="form-label">Müsaitlik Baþlangýç</label>
            <input asp-for="MusaitlikBaslangic" type="time" class="form-control" />
            <span asp-validation-for="MusaitlikBaslangic" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="MusaitlikBitis" class="form-label">Müsaitlik Bitiþ</label>
            <input asp-for="MusaitlikBitis" type="time" class="form-control" />
            <span asp-validation-for="MusaitlikBitis" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="SalonId" class="form-label">Salon</label>
        <select asp-for="SalonId" class="form-select" asp-items="ViewBag.SalonId"></select>
        <span asp-validation-for="SalonId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
