@model IEnumerable<FitHub.Models.Egitmen>
@{
    ViewData["Title"] = "Eðitmenler";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-white mb-0">Eðitmen Kadrosu</h2>
            <p class="text-muted small">Antrenör profillerini ve uzmanlýklarýný düzenleyin.</p>
        </div>
        <a asp-action="Create" class="btn btn-accent shadow">
            <i class="fas fa-user-plus me-2"></i>Yeni Eðitmen
        </a>
    </div>

    @if (!Model.Any())
    {
            <div class="text-center py-5">
                <i class="fas fa-user-ninja fa-4x text-muted mb-3 opacity-25"></i>
                <h4 class="text-white">Henüz eðitmen eklenmemiþ.</h4>
            </div>
    }
    else
    {
            <div class="card bg-card border-0 shadow-lg overflow-hidden">
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0 align-middle">
                        <thead>
                            <tr class="text-secondary text-uppercase small" style="background-color: #1a1a1a;">
                                <th class="py-3 ps-4">Eðitmen</th>
                                <th>Baðlý Olduðu Salon</th>
                                <th>Müsaitlik</th>
                                <th>Uzmanlýk Alanlarý</th>
                                <th class="text-end pe-4">Ýþlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var e in Model)
                        {
                            // Nullable güvenli liste oluþturma
                            var hizmetAdlari = e.EgitmenHizmetler?
                                .Select(x => x.Hizmet?.Ad ?? "")
                                .Where(x => !string.IsNullOrEmpty(x))
                                .ToList() ?? new List<string>();

                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-dark border border-secondary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                    <span class="fw-bold text-warning">@e.Ad.Substring(0, 1).ToUpper()</span>
                                                </div>
                                                <span class="fw-bold text-white">@e.Ad</span>
                                            </div>
                                        </td>
                                        <td><span class="text-muted"><i class="fas fa-map-pin me-1"></i>@(e.Salon?.Ad ?? "-")</span></td>
                                        <td>
                                            <span class="badge bg-dark border border-secondary text-light">
                                        @e.MusaitlikBaslangic.ToString("HH:mm") - @e.MusaitlikBitis.ToString("HH:mm")
                                            </span>
                                        </td>
                                        <td>
                                            <small class="d-block text-warning mb-1">@e.UzmanlikAlanlari</small>
                                            <small class="text-muted fst-italic">@(hizmetAdlari.Any() ? string.Join(", ", hizmetAdlari) : "Hizmet atanmamýþ")</small>
                                        </td>
                                        <td class="text-end pe-4">
                                            <div class="btn-group">
                                                <a asp-action="Details" asp-route-id="@e.Id" class="btn btn-sm btn-outline-info"><i class="fas fa-info-circle"></i></a>
                                                <a asp-action="Edit" asp-route-id="@e.Id" class="btn btn-sm btn-outline-warning"><i class="fas fa-edit"></i></a>
                                                <a asp-action="Delete" asp-route-id="@e.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
    }
</div>