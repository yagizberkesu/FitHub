@model IEnumerable<FitHub.Models.Egitmen>
@{
    ViewData["Title"] = "Eðitmenler";
}

<h1 class="mb-4">Eðitmenler</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Yeni Eðitmen</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Ad</th>
            <th>Salon</th>
            <th>Müsaitlik</th>
            <th>Uzmanlýk</th>
            <th>Hizmetler</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            var hizmetAdlari = e.EgitmenHizmetler?.Select(x => x.Hizmet?.Ad).Where(x => !string.IsNullOrWhiteSpace(x)).ToList() ?? new List<string>();
            <tr>
                <td>@e.Ad</td>
                <td>@e.Salon?.Ad</td>
                <td>@e.MusaitlikBaslangic.ToString("HH:mm") - @e.MusaitlikBitis.ToString("HH:mm")</td>
                <td>@e.UzmanlikAlanlari</td>
                <td>@string.Join(", ", hizmetAdlari)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@e.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@e.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@e.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
