@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FitHub - @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @{
        var userRole = Context.Session.GetString("UserRole") ?? "";
        var userName = Context.Session.GetString("UserName") ?? "";
        var isLoggedIn = !string.IsNullOrWhiteSpace(userName);
        var isAdmin = string.Equals(userRole, "Admin", StringComparison.OrdinalIgnoreCase)
                      || string.Equals(userRole, "admin", StringComparison.OrdinalIgnoreCase);
    }

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">FitHub</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>

                        <!-- AI Koç -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Ai" asp-action="Koc">AI Koçtan Destek</a>
                        </li>

                        @if (isLoggedIn)
                        {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Randevular" asp-action="Index">Randevularım</a>
                                </li>
                        }

                        @if (isAdmin)
                        {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="AdminPanel">Admin Panel</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Salonlar" asp-action="Index">Salonlar</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Egitmenler" asp-action="Index">Eğitmenler</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Hizmetler" asp-action="Index">Hizmetler</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Randevular" asp-action="Index">Randevular</a>
                                </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (!isLoggedIn)
                        {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Uye" asp-action="Login">Giriş Yap</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Uye" asp-action="Register">Kayıt Ol</a>
                                </li>
                        }
                        else
                        {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @userName
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                    @* Profil actionın varsa aç:
                                    <li>
                                        <a class="dropdown-item" asp-controller="Uye" asp-action="Profil">Profil</a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    *@

                                        <li>
                                            <form asp-controller="Uye" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                                <button type="submit" class="dropdown-item">Çıkış</button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container py-3">
            &copy; @DateTime.Now.Year - FitHub
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
